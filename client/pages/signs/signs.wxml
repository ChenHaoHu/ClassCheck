<input focus='{{focus}}'   type='idcard' bindinput='inputpassword' maxlength='4'>
</input>
<view class='item'>
  <view class='name'>请输入四位密匙</view>
  <view class='password' bindtap='showbord'>
    <view class='passwordinput'> {{password[0]}}</view>
    <view class='passwordinput'> {{password[1]}}</view>
    <view class='passwordinput'> {{password[2]}}</view>
    <view class='passwordinput'> {{password[3]}}</view>
  </view>
</view>

<i-button bind:click="tosign" type="primary" size="default" shape="circle" class='go'>我要签到</i-button>

<i-button bind:click="torest" type="primary" size="default" shape="circle" class='go'>帮请假</i-button>

<i-button bind:click="todata" type="primary" size="default" shape="circle" class='go'>查看数据</i-button>

<i-modal title="提示" visible="{{ visible1 }}" bind:ok="toscan" bind:cancel="failscan">
  <view>{{content}}</view>
  <view>{{time}}</view>
  <view>有效时间:{{tt}}分钟</view>
</i-modal>